<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_search_person"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image_search_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/tvseries"
            android:minHeight="@dimen/iv_img_details_height"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/iv_image_search_person"
            android:layout_alignTop="@+id/iv_image_search_person"
            android:layout_centerInParent="true"
            android:alpha="0.5"
            android:background="@color/colorAccent" />


        <TextView
            android:id="@+id/tv_title_search_person"
            style="@style/HeadlineFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_image_search_person"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            tools:text="dfsfdsgsdgsfgfsgfgfdgdfg dvvvvvvvfdvfdvdfvdvd" />


    </RelativeLayout>

</android.support.v7.widget.CardView>