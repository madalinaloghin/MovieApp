<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_movie_popular_home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/iv_image_popular"
            android:layout_width="@dimen/iv_poster_popular_width"
            android:layout_height="@dimen/iv_poster_popular_height"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/tv_title_name"
            style="@style/SubHeadingFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_image_popular"
            android:layout_centerInParent="true"
            android:maxLines="2"
            tools:text="Title movie"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>