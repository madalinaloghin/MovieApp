<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_lists_Movie_series"
    android:layout_width="150dp"
    android:layout_height="130dp"
    android:layout_marginBottom="8dp"
    android:padding="2dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_hover_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha="0.6"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/tvseries"
            android:minHeight="@dimen/iv_img_details_height" />


        <TextView
            android:id="@+id/tv_title_lists"
            style="@style/TitleFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/textview_margin_right_left"
            android:layout_marginRight="@dimen/textview_margin_right_left"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:textAllCaps="true"
            android:textColor="@color/colorHighlight"
            tools:text="dfsfdsgsdgsfgfsgfgfdgdfg dvvvvvvvfdvfdvdfvdvd" />

        <TextView
            android:id="@+id/tv_item_nr_lists"
            style="@style/Body1Font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/textview_margin_top_bottom"
            android:textColor="@color/colorWhite"
            tools:text="5 items" />


    </RelativeLayout>

</android.support.v7.widget.CardView>