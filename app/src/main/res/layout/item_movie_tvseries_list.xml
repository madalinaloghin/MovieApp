<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_movie_popular_home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="6dp"
    android:elevation="26dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <ImageView
            android:id="@+id/iv_image_movie_tv_lists"
            android:layout_width="@dimen/iv_poster_popular_width"
            android:layout_height="@dimen/iv_poster_popular_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/iv_content_description_details"
            android:minHeight="@dimen/iv_poster_popular_height"
            android:minWidth="@dimen/iv_poster_popular_width"
            />

        <TextView
            android:id="@+id/tv_vote_aver_list"
            style="@style/Body1Font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_image_movie_tv_lists"
            android:layout_alignEnd="@id/iv_image_movie_tv_lists"
            android:layout_alignRight="@+id/iv_image_movie_tv_lists"
            android:layout_marginBottom="@dimen/textview_margin_top_bottom"
            android:layout_marginEnd="@dimen/textview_margin_right_left"
            android:layout_marginRight="@dimen/textview_margin_right_left"
            android:textColor="@color/colorHighlight"
            tools:text="smthing" />

        <TextView
            android:id="@+id/tv_list_description"
            android:layout_width="@dimen/iv_poster_popular_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_vote_aver_list"
            android:background="@color/colorPrimary"
            android:maxLines="4"
            android:minLines="4"
            android:padding="3dp"
            style="@style/CaptionFont"
            android:textColor="@color/colorWhite"
            tools:text="something bla bla" />

    </RelativeLayout>

</android.support.v7.widget.CardView>